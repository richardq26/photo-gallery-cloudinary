<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/images/add" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input name="title" type="text" class="form-control" placeholder="Título">
                    </div>
                    <div  class="form-group">
                        <textarea name="description" class="form-control" placeholder="Descripción"></textarea>
                    </div>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input form-control"
                                id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label">Escoge un archivo</label>
                        </div>
                    </div>
                    <button class="btn btn-info btn-block mt-4">Cargar</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Title</th>
                    <th>Description</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr class="text-center">
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>
                        <!-- El target="_blank" abre otra pestaña y no cierra esta -->
                        <a href="{{imageURL}}" class="btn btn-info mr-2" target="_blank">Ver</a>
                        <a href="/images/delete/{{_id}}" class="btn btn-danger ml-2">Eliminar</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>